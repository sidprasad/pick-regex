{
  "name": "pick-regex",
  "displayName": "PICK: Regex Builder",
  "description": "Generate a REGEX from an LLM, then refine it by human classification.",
  "publisher": "SiddharthaPrasad",
  "icon": "images/icon.png",
  "license": "MIT",
  "version": "0.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidprasad/pick-regex"
  },
  "bugs": {
    "url": "https://github.com/sidprasad/pick-regex/issues"
  },
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=20.18.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "regex",
    "regular expression",
    "llm",
    "pattern",
    "human in the loop",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pick-explorer",
          "title": "PICK Regex Builder",
          "icon": "$(regex)"
        }
      ]
    },
    "views": {
      "pick-explorer": [
        {
          "type": "webview",
          "id": "pick.pickView",
          "name": "Regex Builder",
          "icon": "$(regex)"
        }
      ]
    },
    "commands": [
      {
        "command": "pick.reportIssue",
        "title": "Report an Issue",
        "category": "PICK Regex Builder"
      },
      {
        "command": "pick.resetSurveyState",
        "title": "Clear Local Storage",
        "category": "PICK Regex Builder"
      }
    ],
    "keybindings": [
      {
        "command": "pick.reportIssue",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "PICK Regex Builder",
      "properties": {
        "pick.eliminationThreshold": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "description": "Number of negative votes required to eliminate a candidate regex"
        },
        "pick.maxClassifications": {
          "type": "number",
          "default": 100,
          "minimum": 20,
          "description": "Maximum number of word classifications before forcing termination"
        },
        "pick.maxPairsWithoutProgress": {
          "type": "number",
          "default": 2,
          "minimum": 2,
          "description": "Maximum number of consecutive word pairs without eliminating a candidate before forcing termination"
        },
        "pick.surveyPromptEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the survey prompt after using PICK multiple times"
        },
        "pick.showIssueReportModal": {
          "type": "boolean",
          "default": true,
          "description": "Show modal dialog when reporting an issue to remind user to paste clipboard content"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "package:vsix": "npx vsce package",
    "publish:vsce": "npx vsce publish -p $VSCE_TOKEN",
    "release:tag": "node ./util/publish.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test --timeout 8000",
    "test:analyzer": "npm run compile && mocha --ui tdd --timeout 8000 out/test/regexAnalyzer.test.js"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.83",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "mocha": "^10.7.3",
    "sharp": "^0.34.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vsce": "^2.9.0"
  },
  "dependencies": {
    "@gruhn/regex-utils": "^2.7.3",
    "prismjs": "^1.30.0"
  }
}
